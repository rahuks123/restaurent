<table>
  <tr class="order-row">
    <th class="order-header">USER_ID</th>
    <th class="order-header">STATUS</th>
    <th class="order-header">DELIVERED ON</th>

  </tr>
  <% Order.all.each do |order| %>
    <div class="cart">
      <tr class="order-row">
      <% if order.status == "confirmed"%>
        <td class="order-attributes"><%= order.user_id %></td>
        <td class="order-attributes"><%= order.status %></td>
        <td class="order-attributes"><%= order.delivered_at %></td>
          <%= form_with url: "/orders/#{order.id}", local:true, method: "PUT" do %>
            <td><input type="submit" value="DELIVERED" class="order-col"></td>
          <% end %>
      <% end %>
      </tr>
    </div>
  <% end %>
</table>
