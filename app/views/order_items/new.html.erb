<div class="myorder-container">
<% @current_user.orders.all.each do |order| %>

<ul class="myorder-box">

  <p class="myorder-total"> STATUS: <%= order.status %></p>

  <% OrderItem.all.each do |order_item|%>
    <% if order_item.order_id == order.id%>
      <li class="myorder-items">
          <p class="myorder-item-value"><%= order_item.menu_item_name %> x <%= order_item.quantity %></p>
          <p class="myorder-item-value"><%= order_item.menu_item_price %></p>
      </li>
    <% end %>
  <% end %>

  <p class="myorder-total"> TOTAL:  <%= order.total %></p>
</ul>
<% end %>
</div>
