<body class="new_menu_body">
  <div class="adding">
    <section class="MenuNew">
      <%= form_with url: menus_path  do |form| %>
        <div class="Form-section">
          <p class="FormInput-label"> NAME OF ITEM </p>
          <%= form.text_field :name,class:"Form-input" %>
        </div>

        <div>
          <%= form.submit "ADD", class: "Form-submit" %>
        </div>
      <% end %>
    </section>

    <section class="ItemNew">
      <%= form_with url: menu_items_path  do |form| %>
        <div class="Form-section">
          <p class="FormInput-label"> DESCRIPTION </p>
          <%= form.text_field :description, autofocus: true, class:"Form-input" %>
        </div>

        <div class="Form-section">
          <p class="FormInput-label"> NAME OF ITEM </p>
          <%= form.text_field :name,class:"Form-input" %>
        </div>

        <div class="Form-section">
          <p class="FormInput-label"> PRICE </p>
          <%= form.number_field :price ,class:"Form-input" %>
        </div>

        <div class="Form-section">
          <p class="FormInput-label"> CATEGORY </p>
          <%= form.text_field :category ,class:"Form-input" %>
        </div>

        <div class="Form-section">
          <p class="FormInput-label"> IMAGE-URL </p>
          <%= form.text_field :url, class:"Form-input" %>
        </div>

        <div>
          <%= form.submit "ADD", class: "Form-submit" %>
        </div>
      <% end %>
    </section>
  </div>
</body>
